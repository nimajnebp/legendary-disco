{#
/**
 * @file
 * Custom layout for Layout-builder.
 *
 * @see theme_name.layouts.yml: one_column_contained
 * @see https://getbootstrap.com/docs/4.4/layout/grid/
 */
#}

{% if content %}
  <div {{ attributes.addClass('lb-layout one-column-contained container') }}>
    <div class="row">
      {% if content.main %}
        <div {{ region_attributes.main.addClass('lb-region main-region col-12') }}>
          {{ content.main }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
